html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		title= title
		link(rel="stylesheet" href="/normalize.css")
		link(rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400,400italic,700,700italic,800italic")
		link(rel="stylesheet" href="http://fonts.googleapis.com/css?family=Rokkitt:400,700")
		link(rel="stylesheet" href="http://localhost:8080/dist/styles/main.css")
	body
		header.site-header(role="banner")
			//-img.site-header__logo(src="/dist/svg/logo.svg", alt="")
			.site-header__title
				svg(
					width="100%"
					height="100%"
					preserveAspectRatio="xMinYMid"
					version="1.1"
					baseProfile="full"
					xmlns="http://www.w3.org/2000/svg"
					xmlns:xlink="http://www.w3.org/1999/xlink"
				)
					text#site-title(x="50%" y="112" style="text-anchor: middle; line-height: 1;") 3rdhand.info
					use(
						xlink:href="#site-title"
						x="10%"
						y="10"
						style="opacity: .5; transform: scale(1.5)"
					)/
					use(
						xlink:href="#site-title"
						x="20%"
						y="10"
						style="opacity: .2; transform: scale(0.3)"
					)/
		#app!= app
		script(src="http://localhost:8080/dist/scripts/main.js")